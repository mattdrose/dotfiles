#!/usr/bin/env bash

# Shopify `dev` Tool
if [[ -f /opt/dev/dev.sh ]]; then source /opt/dev/dev.sh; fi

# Spin
alias s='spin'

function slast() {
	echo $(spin list | grep -o "$1--[^ ]*" | tail -1)
}

alias ss='spin shell' # ssh into latest web
alias se='spin open' # edit latest web
alias so='open https://shop1.$(slast shopify).matt-rose.scvm.io/admin' # open latest shopify
alias sow='open https://$(slast web).matt-rose.scvm.io' # open latest web
alias sos='open https://storybook.$(slast web).matt-rose.scvm.io' # open latest storybook
