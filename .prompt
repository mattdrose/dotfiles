autoload colors && colors

if (( $+commands[git] ))
then
  git="$commands[git]"
else
  git="/usr/bin/git"
fi

git_branch() {
  echo $($git symbolic-ref HEAD 2>/dev/null | awk -F/ {'print $NF'})
}

git_dirty() {
  if $(! $git status -s &> /dev/null)
  then
    echo ""
  else
    if [[ $($git status --porcelain) == "" ]]
    then
      echo "on %{$fg_bold[green]%}$(git_prompt_info)%{$reset_color%}"
    else
      echo "on %{$fg_bold[red]%}$(git_prompt_info)%{$reset_color%}"
    fi
  fi
}

git_prompt_info() {
 ref=$($git symbolic-ref HEAD 2>/dev/null) || return
# echo "(%{\e[0;33m%}${ref#refs/heads/}%{\e[0m%})"
 echo "${ref#refs/heads/}"
}

# This assumes that you always have an origin named `origin`, and that you only
# care about one specific origin. If this is not the case, you might want to use
# `$git cherry -v @{upstream}` instead.
need_push() {
  if [ $($git rev-parse --is-inside-work-tree 2>/dev/null) ]
  then
    number=$($git cherry -v origin/$(git symbolic-ref --short HEAD 2>/dev/null) 2>/dev/null | wc -l | awk '{print $1}')

    if [[ $number == 0 ]]
    then
      echo ""
    else
      echo " with %{$fg_bold[magenta]%}$number unpushed%{$reset_color%}"
    fi
  fi
}

directory_name() {
  echo "%{$fg_bold[cyan]%}%1/%\/%{$reset_color%}"
}

icon() {
  if [ $SPIN ]
  then
    echo "Í©ú";
  elif [ "${SSH_TTY}" ]
  then
	  echo "‚òÅÔ∏è ";
  else
	  echo "üë®‚Äçüíª";
  fi;
}

user() {
  if [ "${USER}" = "root" ]
  then
	  user_color="$fg_bold[red]";
  else
  	user_color="$fg_bold[blue]";
  fi

  if [ $SPIN ]
  then
    user_display=$(hostname -A | xargs)
  else
    user_display="%n"
  fi
  echo "%{$user_color%}$user_display%{$reset_color%}";
}

export PROMPT=$'\n$(icon) $(user) in $(directory_name) $(git_dirty)$(need_push)\n‚Ä∫ '
set_prompt() {
  export RPROMPT="%{$fg_bold[cyan]%}%{$reset_color%}"
}

precmd() {
  set_prompt
}

unset git_branch
unset git_dirty
unset git_prompt_info
unset need_push
unset directory_name
unset icon
unset user
unset set_prompt
unset precmd
